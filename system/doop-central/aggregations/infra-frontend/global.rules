# vim: set ft=yaml:
groups:
- name: doop-central
  rules:
    - record: global:doop_grouped_violations
      expr: 'sum by (template_kind, name) (max by (template_kind, constraint_name, name) (doop_grouped_violations))'
    - record: global:doop_raw_violations
      expr: 'sum by (template_kind, cluster, name) (max by (template_kind, constraint_name, cluster, name) (doop_raw_violations))'
